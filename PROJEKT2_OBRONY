	*/
	for (int i = 0; i < img->wysokosc; i++) {
		for (int j = 0; j < img->szerokosc; j++) {
			img->piksele[i][j] = 0;
			}
		}
	for (int i = 0; i < img->wysokosc; i++) {
		for (int j = 0; j < img->szerokosc; j++) {
			if ((i + j) % 2 == 1) {
				img->piksele[i][j] = zmienna;
			}
		}
	}
}

void choinka(struct obraz* img) {
	strcpy(img->nazwa, "choinka.pgm");
	strcpy(img->standard, "P2");
	img->szerokosc = 100;
	img->wysokosc = 100;
	img->szarosc = 255;
	img->piksele = malloc(img->wysokosc * sizeof(int*));
	for (int i = 0; i < img->wysokosc; i++) {
		img->piksele[i] = malloc(img->szerokosc * sizeof(int));
	}
	for (int i = 0; i < img->wysokosc; i++) {
		for (int j = 0; j < img->szerokosc; j++) {
			img->piksele[i][j] = 0;
		}
	}
	int srodek = img->szerokosc / 2;
	for (int i = 0; i < img->wysokosc / 2; i++) {
		for (int j = -i; j <= i; j++) {
			img->piksele[i][srodek + j] = img->szarosc;
		}
	}
	for (int i = img->wysokosc / 2; i < img->wysokosc; i++) {
		for (int j = -img->wysokosc / 10; j <= img->wysokosc / 10; j++) {
			img->piksele[i][srodek + j] = img->szarosc;
		}
	}
}

void gwiazdka(struct obraz* img) {
	strcpy(img->nazwa, "gwiazdka.pgm");
	strcpy(img->standard, "P2");
	img->szerokosc = 100;
	img->wysokosc = 100;
	img->szarosc = 255;
	img->piksele = malloc(img->wysokosc * sizeof(int*));
	for (int i = 0; i < img->wysokosc; i++) {
		img->piksele[i] = malloc(img->szerokosc * sizeof(int));
	}
	for (int i = 0; i < img->wysokosc; i++) {
		for (int j = 0; j < img->szerokosc; j++) {
			img->piksele[i][j] = 0;
		}
	}
	for (int i = 0; i < img->wysokosc; i++) {
		img->piksele[i][img->szerokosc / 2] = img->szarosc;
		img->piksele[i][img->szerokosc / 2 - 1] = img->szarosc;
	}
	for (int j = 0; j < img->szerokosc; j++) {
		img->piksele[img->wysokosc/2][j] = img->szarosc;
		img->piksele[img->wysokosc / 2 - 1][j] = img->szarosc;
	}
	for (int i = 0; i < img->wysokosc; i++) {
		img->piksele[i][i] = img->szarosc;
		img->piksele[img->wysokosc - i - 1][i] = img->szarosc;
	}
}

int main()
{
	struct obraz* tablica_obrazow = NULL;
	int rozmiar = 0;
	int menu = -1;
	int wybor = -1;
	while (menu != 0) {
		printf("Menu:\n1. Odczytaj obraz\n2. Zapisz obraz\n0. Wyjscie\n");
		while (scanf("%d", &menu) != 1) {
			printf("Nieprawidlowy wybor. Sprobuj ponownie.\n");
			while (getchar() != '\n');
		}
		switch (menu) {
		case 1:
			dodaj_obraz(&tablica_obrazow, &rozmiar);
			if (odczyt(&tablica_obrazow[rozmiar - 1]) == 0) {
				rozmiar--;
				printf("Nie dodano obrazu do tablicy.\n");
				break;
			}
			else
			wybor = rozmiar;
			break;
		case 2:
			if (rozmiar == 0) {
				printf("Brak obrazow do zapisu. Najpierw odczytaj obraz.\n");
				break;
			}
			zapis(&tablica_obrazow[wybor-1]);
			break;	
		case 3:
			if (rozmiar == 0) {
				printf("Brak obrazow do edycji. Najpierw odczytaj obraz.\n");
				break;
			}
			obrot(&tablica_obrazow[wybor-1]);
			printf("Wykonano obrot obrazu o 90 stopni.\n");
			break;
		case 4:
			if (rozmiar == 0) {
				printf("Brak obrazow do edycji. Najpierw odczytaj obraz.\n");
				break;
			}
			histogram(&tablica_obrazow[wybor-1]);
			printf("Wykonano histogram obrazu.\n");
			break;
		case 5:
			if (rozmiar == 0) {
				printf("Brak obrazow do edycji. Najpierw odczytaj obraz.\n");
				break;
			}
			negatyw(&tablica_obrazow[wybor-1]);
			printf("Wykonano negatyw obrazu.\n");
			break;
		case 6:
			if (rozmiar == 0) {
				printf("Brak obrazow do edycji. Najpierw odczytaj obraz.\n");
				break;
			}
			odbiciex(&tablica_obrazow[wybor-1]);
			printf("6.\n");
			break;
		case 7:
			if (rozmiar == 0) {
				printf("Brak obrazow do edycji. Najpierw odczytaj obraz.\n");
				break;
			}
			odbiciey(&tablica_obrazow[wybor-1]);
			printf("7.\n");
			break;
		case 8:
			if (rozmiar == 0) {
				printf("Brak obrazow do edycji. Najpierw odczytaj obraz.\n");
				break;
			}
			szum(&tablica_obrazow[wybor-1]);
			printf("8.\n");
			break;
		case 9:
			if (rozmiar == 0) {
				printf("Brak obrazow do edycji. Najpierw odczytaj obraz.\n");
				break;
			}
			mediana(&tablica_obrazow[wybor-1]);
			printf("9.\n");
			break;
		case 10:
			if (rozmiar == 0) {
				printf("Brak obrazow do edycji. Najpierw odczytaj obraz.\n");
				break;
			}
			Gauss(&tablica_obrazow[wybor-1]);
			printf("10.\n");
			break;
		case 11:
			lista_obrazow(tablica_obrazow, rozmiar);
			break;
		case 12:
			if (rozmiar == 0) {
				printf("Brak obrazow.\n");
				break;
			}
			do {
				printf("Wybierz obraz do edycji (1-%d): ", rozmiar);
				lista_obrazow(tablica_obrazow, rozmiar);
				scanf("%d", &wybor);
			}
			while (wybor < 1 || wybor > rozmiar);
			break;
		case 13:
			if (rozmiar == 0) {
				printf("Brak obrazow do usuniecia.\n");
				break;
			}
			int usun;
			do {
			printf("Wybierz obraz do usuniecia (1-%d): ", rozmiar);
			lista_obrazow(tablica_obrazow, rozmiar);
			scanf("%d", &usun);
			}
			while (usun < 1 || usun > rozmiar);
			usun_obraz(&tablica_obrazow, &rozmiar, usun - 1);
			printf("Usunieto obraz.\n");
			if (rozmiar == 0) {
				wybor = -1;
			}
			else if (wybor == usun) {
				wybor = 1;
			}
			else if (wybor > usun) {
				wybor--;
			}
			break;
		case 14:
			dodaj_obraz(&tablica_obrazow, &rozmiar);
			wybor = rozmiar;
			//losowe_pola(&tablica_obrazow[rozmiar - 1]);
			//gradient_skos(&tablica_obrazow[rozmiar - 1]);
			//szachownica(&tablica_obrazow[rozmiar - 1]);
			//choinka(&tablica_obrazow[rozmiar - 1]);
			//gwiazdka(&tablica_obrazow[rozmiar - 1]);
			printf("Dodano losowy obraz.\n");
			break;
		case 15:
			zliczanie(&tablica_obrazow[wybor - 1]);
			break;
		case 0:
			printf("Koniec programu.\n");
			break;
		default:
			printf("Nieprawidlowy wybor. Sprobuj ponownie.\n");
			break;
		}
	}
	for (int i = 0; i < rozmiar; i++) {
		zwolnij_obraz(&tablica_obrazow[i]);
	}
	if (tablica_obrazow != NULL) {
		free(tablica_obrazow);
		tablica_obrazow = NULL;
	}
	_CrtDumpMemoryLeaks();
	return 0;
}
