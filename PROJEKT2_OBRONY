void zliczanie(struct obraz* img) {
	int* suma = NULL;
	suma = malloc(img->wysokosc * sizeof(int));
	for (int i = 0; i < img->wysokosc; i++) {
		suma[i] = 0;
	}
	for (int i = 0; i < img->wysokosc; i++) {
		for (int j = 0; j < img->szerokosc; j++) {
			suma[i] += img->piksele[i][j];
		}
	}
	for (int i = 0; i < img->wysokosc; i++) {
		printf("Suma pikseli w wierszu %d: %d\n", i + 1, suma[i]);
	}
	free(suma);
}

void szachownica(struct obraz* img) {
	strcpy(img->nazwa, "szachownica.pgm");
	strcpy(img->standard, "P2");
	img->szerokosc = 100;
	img->wysokosc = 100;
	img->szarosc = 255;
	img->piksele = malloc(img->wysokosc * sizeof(int*));
	for (int i = 0; i < img->wysokosc; i++) {
		img->piksele[i] = malloc(img->szerokosc * sizeof(int));
	}
	int zmienna;
	printf("Podaj wartosc szarosci dla bialych pol: ");
	scanf("%d", &zmienna);
	/*
	for (int i = 0; i < img->wysokosc; i++) {
		for (int j = 0; j < img->szerokosc; j++) {
			if ((i / 10 + j / 10) % 2 == 0) {
				img->piksele[i][j] = 0;
			}
			else {
				srand(time(NULL));
				zmienna = rand() % (img->szarosc + 1);
				img->piksele[i][j] = zmienna;
			}
